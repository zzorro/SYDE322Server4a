<h1>Listing songs</h1>

<table class="table table-striped" >
  <tr>
    <th>Name</th>
    <th>Artist</th>
    <th>Lyrics</th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td><%= song.artist %></td>
    <td><%= song.lyrics %></td>
    <td><%= link_to 'Show', song, class: "btn btn-small" %>
    <%= link_to 'Edit', edit_song_path(song), class: "btn btn-small" %>
    <%= link_to 'Destroy', song, confirm: 'Are you sure?', method: :delete, class: "btn btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Song', new_song_path, class: "btn btn-large btn-primary page_button"  %>
