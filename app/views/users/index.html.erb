<h1>Users</h1>

<table class="table table-stripped">
  <thead>  
   <tr>
    <th>ID</th>    
    <th>Name</th>
    <th>Games played</th>
    <th>Games won</th>
    <th>Running score</th>
    <th></th>
   </tr>
  </thead>

<% @users.each do |user| %>
   <tr>
    <td><%= user.id %></td>    
    <td><%= user.name %></td>
    <td><%= user.games_played %></td>
    <td><%= user.games_won %></td>
    <td><%= user.running_score %></td>
    <td><%= link_to 'Show', user, class: "btn btn-small" %>
    <%= link_to 'Edit', edit_user_path(user), class: "btn btn-small" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path, class: "btn btn-large btn-primary page_button" %>
