<h1>Game Rooms</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Open</th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.open %></td>
    <td><%= link_to 'Show', game, class: "btn btn-small" %>
    <%= link_to 'Edit', edit_game_path(game), class: "btn btn-small" %>
    <%= link_to 'Destroy', game, confirm: 'Are you sure?', method: :delete, class: "btn btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path, class: "btn btn-large btn-primary page_button" %>
